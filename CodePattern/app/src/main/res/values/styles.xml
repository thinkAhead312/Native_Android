<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="android:Theme.Holo.Light.DarkActionBar"></style>

    <style name="AppTheme" parent="AppBaseTheme"></style>

    <style name="btn" parent="android:Widget.Holo.Light.Button">
        <item name="android:minHeight">1dp</item>
        <item name="android:minWidth">1dp</item>
    </style>

    <style name="custom_switch">
        <item name="android:textStyle">bold</item>
        <item name="android:thumb">@drawable/swith_thumb</item>
        <item name="android:track">@drawable/switch_bg</item>
    </style>

    <style name="tab_btn" parent="android:Widget.Holo.Light.ImageButton">
        <item name="android:background">@drawable/btn_tab</item>
        <item name="android:minHeight">1dp</item>
        <item name="android:minWidth">1dp</item>
    </style>

    <style name="tab_btn1" parent="@style/btn">
        <item name="android:background">@drawable/btn_tab</item>
        <item name="android:textColor">@color/tab_color</item>
        <item name="android:textSize">@dimen/txt_15sp</item>
        <item name="android:paddingBottom">@dimen/pad_5dp</item>
    </style>

    <style name="tab_divider">
        <item name="android:background">@color/main_color_green</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="white_btn" parent="@style/btn">
        <item name="android:background">@drawable/white_btn</item>
        <item name="android:paddingLeft">@dimen/pad_15dp</item>
        <item name="android:paddingRight">@dimen/pad_15dp</item>
        <item name="android:textColor">@color/main_color_green</item>
        <item name="android:textSize">@dimen/txt_16sp</item>
    </style>

    <style name="btn_white_green" parent="@style/btn">
        <item name="android:background">@drawable/green_dk_white_bg</item>
        <item name="android:padding">@dimen/pad_10dp</item>
        <item name="android:textColor">@color/white_green_color</item>
        <item name="android:textSize">@dimen/txt_16sp</item>
    </style>

    <style name="btn_city" parent="@style/btn_white_green">
        <item name="android:drawableLeft">@drawable/icon_checked</item>
        <item name="android:drawableRight">@drawable/ic_checked_empty</item>
        <item name="android:layout_marginLeft">@dimen/pad_10dp</item>
        <item name="android:layout_marginRight">@dimen/pad_10dp</item>
    </style>

    <style name="edittext" parent="android:Widget.Holo.Light.EditText">
        <item name="android:background">@drawable/edittext_bg</item>
        <item name="android:ems">10</item>
        <item name="android:imeActionId">100</item>
        <item name="android:inputType">textPersonName</item>
        <item name="android:paddingLeft">@dimen/pad_5dp</item>
        <item name="android:paddingRight">@dimen/pad_5dp</item>
        <item name="android:textColorHint">@color/main_color_gray</item>
        <item name="android:textSize">@dimen/txt_16sp</item>
    </style>

</resources>