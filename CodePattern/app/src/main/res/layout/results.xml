<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/main_color_green_dk"
        android:paddingTop="@dimen/pad_10dp" 
        android:paddingBottom="@dimen/pad_10dp"
        android:paddingLeft="@dimen/pad_15dp"
        android:paddingRight="@dimen/pad_15dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/start"
                android:textColor="@color/main_color_green_lt"
                android:textSize="@dimen/txt_14sp"
                android:layout_marginBottom="@dimen/pad_5dp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Current Location"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_14sp" />

        </LinearLayout>
         <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/pad_5dp"
                android:text="@string/end"
                android:textColor="@color/main_color_green_lt"
                android:textSize="@dimen/txt_14sp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rundle Mall"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_14sp" />

        </LinearLayout>
         <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/pad_5dp"
                android:text="@string/leaving"
                android:textColor="@color/main_color_green_lt"
                android:textSize="@dimen/txt_14sp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Now"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_14sp" />

            <Button
                android:id="@+id/btnTime"
                style="@style/btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_green_small"
                android:text="@string/set_arrival"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_12sp"
                android:layout_marginTop="@dimen/pad_5dp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/blue_dk" 
             android:paddingTop="@dimen/pad_10dp" 
        android:paddingBottom="@dimen/pad_10dp"
            android:paddingLeft="@dimen/pad_15dp"
        android:paddingRight="@dimen/pad_15dp"
        android:gravity="center_vertical">
            
            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="22"
                android:textSize="@dimen/txt_14sp" 
                android:textColor="@color/white"
                android:drawablePadding="@dimen/pad_5dp"
                android:drawableLeft="@drawable/ic_thermometer"
                android:gravity="center_vertical" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/degree_cel"
                android:textSize="@dimen/txt_14sp" 
                android:textColor="@color/white"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/blue_lt"
            android:gravity="center"
            android:paddingBottom="@dimen/pad_10dp"
            android:paddingTop="@dimen/pad_10dp" >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/txt_14sp" 
                android:drawableLeft="@drawable/ic_cloud"
                android:drawablePadding="@dimen/pad_5dp"
                android:text="Mostly Cloudy at Destination"
                android:textColor="@color/white" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/pad_10dp" >

        <LinearLayout
            android:id="@+id/v1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/main_color_green"
            android:clickable="true"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|bottom" 
                android:padding="@dimen/pad_5dp">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="87"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="@dimen/txt_20sp"
                    android:drawableLeft="@drawable/ic_tab1" 
                    android:drawablePadding="@dimen/pad_5dp"
                    />
                 <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="min"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txt_14sp"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="353 cal"
                android:background="@color/main_color_green_dk"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_13sp"
                android:drawableRight="@drawable/arrow_wh_small"
                android:gravity="center"
                android:padding="@dimen/pad_3dp"
                 />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/v2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/main_color_green"
            android:clickable="true"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/pad_5dp"
            android:layout_marginRight="@dimen/pad_5dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|bottom" 
                android:padding="@dimen/pad_5dp">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="49"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="@dimen/txt_20sp"
                    android:drawableLeft="@drawable/ic_tab2" 
                    android:drawablePadding="@dimen/pad_5dp"
                    />
                 <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="min"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txt_14sp"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="223 cal"
                android:background="@color/main_color_green_dk"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_13sp"
                android:drawableRight="@drawable/arrow_wh_small"
                android:gravity="center"
                android:padding="@dimen/pad_3dp"
                 />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/v3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/main_color_green"
            android:clickable="true"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|bottom" 
                android:padding="@dimen/pad_5dp">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="@dimen/txt_20sp"
                    android:drawableLeft="@drawable/ic_tab3" 
                    android:drawablePadding="@dimen/pad_5dp"
                    />
                 <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="min"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txt_14sp"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/main_color_green_dk"
                android:drawableRight="@drawable/arrow_wh_small"
                android:gravity="center"
                android:padding="@dimen/pad_3dp"
                android:text="$25+"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_13sp" />

        </LinearLayout>

    </LinearLayout>

    <ExpandableListView
        android:id="@+id/elist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:groupIndicator="@null"
        tools:listitem="@layout/result_item_child"
        android:childDivider="@color/main_color_gray_lt"
        android:dividerHeight="0.5dp" >

    </ExpandableListView>

</LinearLayout>
