<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--******************** INPUT FIELDS ****************************** -->
    <style name="InputField" parent="Widget.AppCompat.EditText"/>

    <style name="InputField.Credential">
         <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:layout_marginLeft">64dp</item>
        <item name="android:layout_marginRight">64dp</item>
        <item name="android:inputType">textCapWords</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="InputField.Credential.Email">
        <item name="android:inputType">textEmailAddress</item>
    </style>

    <style name="InputField.Credential.Password">
        <item name="android:inputType">textPassword</item>
    </style>

    <!--******************** Labels      ******************************* -->
    <style name="Label">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:alpha">.86</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_marginBottom">15dp</item>
    </style>

    <style name="Label.CredentialHeader">
        <item name="android:layout_marginBottom">32dp</item>
        <item name="android:textSize">34sp</item>
    </style>

    <style name="Label.Sub">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginLeft">64dp</item>
        <item name="android:layout_marginRight">64dp</item>

    </style>


    <!--******************** Containers   ****************************** -->

    <!--******************** Buttons      ****************************** -->

    <style name="Buttton.Flat" parent="Widget.AppCompat.Button.Borderless"/>

    <style name="Buttton.Flat.Primary">
        <item name="android:background">@drawable/button_flat</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:minWidth">88dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingLeft">16sp</item>
        <item name="android:paddingRight">16sp</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>


    <!--******************** Others ************************************ -->
</resources>