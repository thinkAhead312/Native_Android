<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.andradejoseph.change12_ver_2">

    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name=".AppController">
        >
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Change12ManualActivity"></activity>

        <activity android:name="com.example.josephandrade.article_detail_transition.ArticleListActivity">

        </activity>
        <activity
            android:name="com.example.josephandrade.article_detail_transition.DetailsActivity"
            android:label="@string/title_activity_detail"
            android:parentActivityName="com.example.josephandrade.article_detail_transition.ArticleListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.josephandrade.article_detail_transition.ArticleListActivity" />
        </activity>


    </application>

</manifest>