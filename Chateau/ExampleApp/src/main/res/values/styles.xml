<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryLight">@color/indigo100</item>
        <item name="colorPrimary">@color/indigo500</item>
        <item name="colorPrimaryDark">@color/indigo700</item>

        <item name="colorAccentLight">@color/indigo100</item>
        <item name="colorAccent">@color/pinkA200</item>
        <item name="colorAccentDark">@color/indigo700</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">?colorPrimary</item>
        <item name="actionBarInsetStart">@dimen/keyline2</item>
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.NoIcon" parent="AppTheme">
        <item name="actionBarInsetStart">@dimen/keyline1</item>
    </style>

    <style name="ActionBarThemeOverlay" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/whiteAlpha100</item>
        <item name="android:textColorSecondary">@color/whiteAlpha70</item>
    </style>

    <style name="ActionBarPopupThemeOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="HeaderBar">
        <item name="android:background">?colorPrimary</item>
    </style>

    <style name="ActionBarThemeOverlay.NoIcon">
        <item name="actionBarInsetStart">@dimen/keyline1</item>
    </style>

</resources>
